generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Car {
  id          Int          @id @default(autoincrement())
  placa       String       @unique
  cor         String
  marca       String
  utilizacoes Utilizacao[]
}

model Motorista {
  id          Int          @id @default(autoincrement())
  nome        String
  utilizacoes Utilizacao[]
}

model Utilizacao {
  id                    Int       @id @default(autoincrement())
  dataInicioUtilizacao  DateTime
  dataTerminoUtilizacao DateTime?
  motivoUtilizacao      String
  motoristaId           Int
  automovelId           Int
  motorista             Motorista @relation(fields: [motoristaId], references: [id])
  automovel             Car       @relation(fields: [automovelId], references: [id])
}
